<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- Transition -->
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000"
        motion:motionInterpolator="overshoot">

        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.4"
                android:scaleY="1.4"
                motion:framePosition="70"
                motion:motionTarget="@id/app_icon"
                motion:transitionEasing="spring(1,0.5,0.4,1)" />

            <KeyAttribute
                android:scaleX="1.2"
                android:scaleY="1.2"
                motion:framePosition="90"
                motion:motionTarget="@id/app_text"
                motion:transitionEasing="spring(1,0.7,0.6,1)" />
        </KeyFrameSet>
    </Transition>

    <!-- START -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/constraint_bg">
            <Layout
                android:layout_width="5dp"
                android:layout_height="5dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/app_icon">
            <Transform
                android:elevation="0dp"
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="@color/purple_blue" />
        </Constraint>

        <Constraint android:id="@id/app_text">
            <Transform
                android:elevation="0dp"
                android:scaleX="1"
                android:scaleY="1" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/clay_gray" />
        </Constraint>
    </ConstraintSet>

    <!-- END -->
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/constraint_bg">
            <Layout
                android:layout_width="1000dp"
                android:layout_height="1000dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/app_icon">
            <Transform
                android:elevation="6dp"
                android:scaleX="1.3"
                android:scaleY="1.3" />
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="@android:color/black" />
        </Constraint>

        <Constraint android:id="@id/app_text">
            <Transform
                android:elevation="10dp"
                android:scaleX="1.1"
                android:scaleY="1.1" />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@android:color/white" />
        </Constraint>
    </ConstraintSet>
</MotionScene>
