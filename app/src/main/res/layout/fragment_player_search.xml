<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayerSearchFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/all_plr_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for a username"
        android:background="@drawable/search_bg"
        android:iconifiedByDefault="false"/>

    <ProgressBar
        android:id="@+id/prog_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/all_plr_search"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/outline_book_24"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="@string/none"
        android:textColor="@color/white"
        android:background="@drawable/title_bg"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/account_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unknown_acc"
        android:layout_toEndOf="@id/avatar"
        android:layout_alignBottom="@id/avatar"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_person"
        android:gravity="center"/>

    <TextView
        android:id="@+id/join_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/join_date"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/last_onl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="@string/lastOnline_date"
        android:textSize="15sp"
        android:layout_toEndOf="@id/avatar"
        android:layout_below="@id/title"/>
</RelativeLayout>