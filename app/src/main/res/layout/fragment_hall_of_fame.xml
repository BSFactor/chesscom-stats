<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Collapsible header with podium -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Collapsible content: Title + Podium -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_collapseMode="parallax">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="The GOATests"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Second Place -->
                    <LinearLayout
                        android:id="@+id/podium_second"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/avatar_second"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Second Place"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:id="@+id/username_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Player 2"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="#C0C0C0" />
                    </LinearLayout>

                    <!-- First Place -->
                    <LinearLayout
                        android:id="@+id/podium_first"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/avatar_first"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="First Place"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:id="@+id/username_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Player 1"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#FFD700" />
                    </LinearLayout>

                    <!-- Third Place -->
                    <LinearLayout
                        android:id="@+id/podium_third"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/avatar_third"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Third Place"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:id="@+id/username_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Player 3"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#CD7F32" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hall_of_fame"
                    android:textSize="24sp" />

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- SearchView: Sticky header - moves with screen, collapses after podium -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/player_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_bg"
            android:iconifiedByDefault="false"
            android:queryHint="Search for a player"
            app:iconifiedByDefault="false" />
        <!--            app:layout_scrollFlags="scroll|exitUntilCollapsed"-->

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView with SwipeRefresh - scrolls and triggers collapse -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/leaderboard_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hall_of_fame_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="16dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
