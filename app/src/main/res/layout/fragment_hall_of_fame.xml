<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="The GOATests"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/podium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Second Place -->
        <LinearLayout
            android:id="@+id/podium_second"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_second"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Second Place"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/username_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Player 2"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#C0C0C0"
                android:src="@drawable/ic_second"/>
        </LinearLayout>

        <!-- First Place -->
        <LinearLayout
            android:id="@+id/podium_first"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_first"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="First Place"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/username_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Player 1"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFD700"
                android:src="@drawable/ic_first"/>
        </LinearLayout>

        <!-- Third Place -->
        <LinearLayout
            android:id="@+id/podium_third"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_third"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Third Place"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/username_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Player 3"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#CD7F32"
                android:src="@drawable/ic_third"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/collapse_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_eye_track" />

    <androidx.appcompat.widget.SearchView
        android:layout_marginTop="15dp"
        android:id="@+id/player_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_bg"
        android:queryHint="Search for a player"
        app:iconifiedByDefault="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/hall_of_fame"
        android:layout_centerInParent="true"
        android:textSize="24sp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/leaderboard_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/player_search_view">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hall_of_fame_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
