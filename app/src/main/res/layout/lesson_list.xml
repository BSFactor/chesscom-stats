<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/lesson_card_bg">

            <!-- Top Image Section -->
            <ImageView
                android:id="@+id/recImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/lesson_1"
                android:contentDescription="@string/app_name"/>

            <!-- Bottom Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:padding="14dp"
                android:gravity="center_vertical">

                <!-- Left Side -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn to Play Chess"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/recDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Master the basics of chess and strategic thinking."
                        android:textColor="#E0E0E0"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                </LinearLayout>

                <!-- Right Side (Language Tag) -->
                <TextView
                    android:id="@+id/recLang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EN"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/lang_badge_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
